<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:orientation="vertical"
    tools:context=".library.playlists.ui.activity.PlaylistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light"
        android:paddingBottom="24dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:contentDescription="@string/back_button"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            android:backgroundTint="@color/grey_light"

            />

        <ImageView
            android:id="@+id/playlistCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"

            android:contentDescription="@string/playlist_description"
            android:scaleType="centerCrop"
            />


        <TextView
            android:id="@+id/playlistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playlistCover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"

            tools:text="@string/name_of_playlist"
            android:fontFamily="@font/ys_display_bold"
            android:textFontWeight="700"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/playlistDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playlistName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"

            tools:text="@string/playlist_description"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />


        <LinearLayout
            android:id="@+id/duration_and_size_layout"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            app:layout_constraintTop_toBottomOf="@+id/playlistDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/playlistDuration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                tools:text="@string/duration_of_playlist"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textSize="18sp"
                android:textColor="@color/black"

                />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_dot"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/playlistSize"
                tools:text="@string/playlist_size"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/share"
            app:layout_constraintTop_toBottomOf="@id/duration_and_size_layout"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="16dp"
            android:src="@drawable/ic_share"
            app:tint="@color/black"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/grey_light"/>

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/add_to_queue"
            app:layout_constraintStart_toEndOf="@id/share_button"
            app:layout_constraintTop_toBottomOf="@id/duration_and_size_layout"

            android:layout_marginTop="16dp"
            android:src="@drawable/ic_menu_24"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/grey_light"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/playlist_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/shape_bottom_sheet"
            android:orientation="vertical"

            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="266dp">

            <View
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_1457" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="13dp"/>

            <TextView
                android:id="@+id/your_playlist_is_empty_textview"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="@string/your_playlist_is_empty"
                android:layout_marginTop="8dp"
                android:gravity="center"

                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary"
                android:visibility="gone"
                />
        </LinearLayout>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/playlist_menu_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/shape_bottom_sheet"
        android:orientation="vertical"


        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="383dp">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_1457"
            />

        <include
            android:id="@+id/playlist_info_in_menu"
            layout="@layout/playlist_bottomsheet_view" />
        
        <TextView
            android:id="@+id/share_button_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="@string/share_playlist"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"/>

        <TextView
            android:id="@+id/edit_button_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="@string/edit_playlist"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"/>
        <TextView
            android:id="@+id/delete_button_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="@string/delete_playlist"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
