<?xml version="1.0" encoding="utf-8"?>
<resources >
    <!-- стиль для кнопок главного экрана-->
    <style name="ButtonMainActivityStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeMainMenu</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/buttonRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_at_button</item>
        <item name="iconTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- стиль для layout с текстовым элементом и кнопкой-действием на экране Настройки-->
    <style name="FrameLayoutSettingsActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_block_sizes</item>
        <item name="android:paddingStart">@dimen/settings_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/settings_paddingRight</item>

    </style>

    <!-- стиль для текстовых элементов экрана Настройки-->
    <!-- в тч для реализации светлой/темной темы-->
    <style name="TextViewSettingsActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- стиль для элементов экрана Настройки: иконки -->
    <!-- в тч для реализации светлой/темной темы-->
    <style name="ImageViewSettingsActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:scaleType">fitCenter</item>
        <!--<item name="android:checked">false</item>-->
        <!--<item name="android:state_checked">false</item>-->
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_gravity">start</item>
        <!--<item name="android:checked">false</item>-->
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/grey_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_block_sizes</item>
        <item name="android:paddingStart">@dimen/settings_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/settings_paddingRight</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- стиль для EditText на экране Поиск -->
    <!-- в тч для реализации светлой/темной темы-->
    <style name="SearchEditText">
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:drawableTint">@color/grey_text</item>
    </style>

    <!-- стиль для кнопки Очистить внутри EditText на экране Поиск -->
    <!-- в тч для реализации светлой/темной темы-->
    <style name="ClearButton">
        <item name="android:tint">@color/grey_text</item>
    </style>

    <!-- стиль для текста с названием исполнителя и длительностью на экране Поиск -->
    <!-- в тч для реализации светлой/темной темы-->
    <style name="SearchArtistStyle">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:drawableTint">@color/grey_text</item>
        <item name="tint">@color/grey_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- стиль для текста плейсхолдера с ошибкой на экране Поиск -->
    <!-- в тч для реализации светлой/темной темы-->
    <style name="ErrorPlaceholderSearchActivity">
        <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
         <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
         <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

</resources>